<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="@dimen/_8sdp"
    app:cardElevation="0dp"

    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_16sdp">

        <ImageView
            android:id="@+id/iv_trash"
            android:layout_width="@dimen/_82sdp"
            android:layout_height="@dimen/_66sdp"
            android:scaleType="centerCrop"
            android:src="@color/youngBlue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_trash_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Trash Title"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toStartOf="@id/cv_type_trash"
            app:layout_constraintStart_toEndOf="@id/iv_trash"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_potential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potensial Circlo Point : "
            android:textColor="@color/greenLight"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_trash_title"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@id/tv_trash_title"
            app:layout_constraintBottom_toBottomOf="@id/iv_trash"/>

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100/kg"
            android:textColor="@color/greenLight"
            android:fontFamily="@font/roboto_medium"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toTopOf="@id/tv_potential"
            app:layout_constraintStart_toEndOf="@id/tv_potential"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_type_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/youngGreen"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp">

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="Organik"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>