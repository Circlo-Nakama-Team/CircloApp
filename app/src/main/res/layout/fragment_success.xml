<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_16sdp"
    tools:context=".ui.donate.success.SuccessFragment">

   <ImageView
       android:id="@+id/iv_success"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/il_success"
       android:layout_marginTop="@dimen/_100sdp"
       app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yeayy, Donasimu berhasil!"
        app:layout_constraintTop_toBottomOf="@id/iv_success"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="@dimen/_24sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_20ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donasimu sedang diproses oleh tim kami"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="@dimen/_24sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintTop_toBottomOf="@id/tv_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        app:layout_constraintTop_toBottomOf="@id/tv_info"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>